<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="7dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_my_near_recommend_img"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/my_near_recommend_store_img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_top_left="15dp"
        app:riv_corner_radius_top_right="15dp" />

    <TextView
        android:id="@+id/item_my_near_recommend_tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크린업24 셀프빨래방 야당역점"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/item_my_near_recommend_img"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/item_my_near_recommend_tx_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="안녕하세요. 크린업24 셀프빨래방 야당역점 입니다."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqahansansneo_medium"
        app:layout_constraintTop_toBottomOf="@+id/item_my_near_recommend_tx_title"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/item_my_near_recommend_tx_postscript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후기 4"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/carrot"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/item_my_near_recommend_tx_subtitle"/>

    <TextView
        android:id="@+id/item_my_near_recommend_tx_patron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" \u00b7 단골 6"
        android:textSize="12sp"
        android:fontFamily="@font/spoqahansansneo_medium"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/item_my_near_recommend_tx_postscript"
        app:layout_constraintTop_toBottomOf="@+id/item_my_near_recommend_tx_subtitle"/>

    <TextView
        android:id="@+id/item_my_near_recommend_tx_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="예준맘님 비가 많이와서 그런지~~ 울 아들램이 운화가 다 젖어버린거 아니에요??"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_my_near_recommend_tx_border"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@+id/item_my_near_recommend_tx_postscript"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>